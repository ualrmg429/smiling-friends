generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid()) @db.Uuid
  email String @unique
  passwordHashed String
  role Role @default(USER)
}

model Character {
  id String @id @default(uuid()) @db.Uuid
  name String
  description String
  species String
  image Image? @relation(fields: [imageId], references: [id])
  imageId String? @unique @db.Uuid
}

model Image {
  id String @id @default(uuid()) @db.Uuid
  url String
  character Character?
}

enum Role {
  USER
  ADMIN
}
